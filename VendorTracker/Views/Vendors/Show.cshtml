@{
    Layout = "_Layout";
}

@using VendorTracker.Models;

<h1>@Model["vendor"].Name</h1>
<h3>@Model["vendor"].Description</h3>

<ol>
    @foreach (Order order in @Model["orders"])
    {
        <li><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Title</a></li>
    }
</ol>

<p><a href='/vendors/@Model["vendor"].Id/orders/new'>New Order</a></p>
<p><a href='/vendors'>Vendor List</a></p>
<p><a href='/'>Home</a></p>
